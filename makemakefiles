	cd Network/MPLS && $(MAKEMAKE) $(OPTS) -n -r -I../IPv4 -I../IPv4d -I../../Base -I../../Util -I../Contract
	cd Network/LDP && $(MAKEMAKE) $(OPTS) -n -r -I../IPv4 -I../IPv4d -I../../Transport/UDP -I../../Transport/TCP -I../MPLS -I../../Base -I../../Util -I../Contract
