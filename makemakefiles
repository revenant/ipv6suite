	cd NetworkInterfaces/PPP6 && $(MAKEMAKE) $(OPTS) -n -r -I../Ethernet6 -I.. -I../.. -I../../Util -I../../Network/IPv6 -I../../Network/ICMPv6 -I../../Network/Contract -I../../World -I../../PHY -I../../Base
