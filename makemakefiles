	: #FIXME remove -IWireless from Eth!!!!! --AV
	cd NetworkInterfaces/Ethernet6 && $(MAKEMAKE) $(OPTS) -n -r -I../Wireless -I../../PHY -I. -I.. -I../.. -I../../Util -I../../Network/IPv6 -I../../Network/ICMPv6 -I../../Network/Contract -I../../World -I../../Base
